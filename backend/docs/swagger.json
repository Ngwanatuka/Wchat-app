{
  "openapi": "3.0.0",
  "info": {
    "title": "My API",
    "version": "1.0.0",
    "description": "API documentation using Swagger"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Local development server"
    }
  ],
  "paths": {
    "/api/auth/register": {
      "get": {
        "summary": "Send verification email and return newly registered account details",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "example": {
                  "email": "abdul@alx.com",
                  "lastName": "Dev", 
                  "firstName": "Abdul",
                  "username": "abdul"
                }
              }
            }
          }
        }
      }
    }
  }
}
